<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Diside\SecurityBundle\Entity\PageTranslation" table="page_translation">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="language" column="language" type="string" length="255"/>
        <field name="title" column="title" type="string" length="255"/>
        <field name="url" column="url" type="string" length="255"/>
        <field name="text" column="text" type="text"/>

    </mapped-superclass>

</doctrine-mapping>
