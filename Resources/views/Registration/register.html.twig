{% extends '::one-column.html.twig' %}

{% block main_content %}
    <div class="col-md-12 col-lg-push-3 col-lg-6">
        <h1>{{ 'actions.register_user'|trans }}</h1>

        {% if errors is not null %}
            {% for error in errors %}
                <div class="alert alert-danger">
                    {{ ('error.' ~ error)|trans }}
                </div>
            {% endfor %}
        {% endif %}

        {{ form_errors(form) }}

        <form id="register" method="POST" action="{{ path('register') }}">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_widget(form) }}

                    <hr/>

                    <button class="register btn btn-primary" type="submit">{{ 'actions.register'|trans }}</button>

                    <a href="{{ path('login') }}" class="btn btn-link pull-right">{{ 'login.already_registered'|trans }}</a>
                </div>

            </div>


        </form>
    </div>
{% endblock main_content %}
