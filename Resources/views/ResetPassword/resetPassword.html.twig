{% extends '::one-column.html.twig' %}

{% block main_content %}
    <div class="col-md-12 col-lg-push-3 col-lg-6">
        <h1>{{ 'reset_password.reset'|trans }}</h1>

        {% if errors is not null %}
            {% for error in errors %}
                <div class="alert alert-danger">
                    {{ ('error.' ~ error)|trans }}
                </div>
            {% endfor %}
        {% endif %}

        {{ form_errors(form) }}

        <form id="reset_password" method="POST">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_widget(form) }}
                </div>
            </div>

            <button class="reset-password btn btn-primary" type="submit">{{ 'actions.reset_password'|trans }}</button>

        </form>
    </div>
{% endblock main_content %}
