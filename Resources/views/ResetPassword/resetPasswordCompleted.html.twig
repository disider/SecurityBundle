{% extends '::one-column.html.twig' %}

{% block main_content %}
    <h1>{{ 'reset_password.completed'|trans }}</h1>

    <p>{{ 'reset_password.thank_you'|trans }}</p>
    {% set url %}
    <a href="{{ path('login') }}">{{ 'reset_password.login'|trans }}</a>
    {% endset %}
    <p>{{ 'reset_password.message'|trans({'%url%': url})|raw }}</p>
{% endblock main_content %}
