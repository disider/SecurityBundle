{% extends '::one-column.html.twig' %}

{% block main_content %}

    <div class="row">

        <div class="col-md-12 col-lg-push-3 col-lg-6">
            <h1>{{ 'login.title'|trans }}</h1>

            {% set registerUrl %}
                <a href="{{ path('register') }}">{{ 'registration.link_title'|trans }}</a>
            {% endset %}

            <div class="panel panel-default">
                <div class="panel-body">

                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error|trans({}, 'validators') }}
                        </div>
                    {% endif %}

                    <form action="{{ path('login_check') }}" method="post" novalidate>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                        <div class="form-group">
                            <label for="username">{{ 'form.username'|trans }}</label>
                            <input class="form-control" type="text" id="username" name="_username"
                                   value="{{ last_username }}" required="required"/>
                        </div>

                        <div class="form-group">
                            <label for="password">{{ 'form.password'|trans }}</label>
                            <input class="form-control" type="password" id="password" name="_password"
                                   required="required"/>
                        </div>

                        <div class="checkbox">
                            <label for="remember_me">
                                <input type="checkbox" id="remember_me" name="_remember_me"
                                       value="on"/>{{ 'form.remember_me'|trans }}
                            </label>

                            <a class="btn btn-link pull-right" href="{{ path('reset_password_request') }}">{{ 'reset_password.request'|trans }}</a>
                        </div>

                        <input type="hidden" name="_target_path" value="{{ target_path }}"/>

                        <hr/>

                        <input class="btn btn-primary" type="submit" id="login" name="login"
                               value="{{ 'actions.login'|trans }}"/>

                        <a class="btn btn-link pull-right" href="{{ path('register') }}">{{ 'registration.not_yet_registered'|trans }}</a>

                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock main_content %}
